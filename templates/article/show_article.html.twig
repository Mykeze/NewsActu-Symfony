{% extends 'base.html.twig' %}

{% block body %}

	<div class="row">
		<div class="col-12">
			{% include "include/_flashes.html.twig" %}
		</div>
	</div>

	<div class="row">
		<div class="col-12 my-4 mx-auto">
			<div class="card">
				<div class="card-header">
					<h1 class="card-title text-center mb-5">{{ article.title }}</h1>
					<p class="h4 text-center mb-3 text-secondary">{{ article.subtitle }}</p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-center">Créé le
						{{ article.createdAt | date('d/m/Y H:i') }}
						|
						<span class="text-muted">Mis à jour le
							{{ article.updatedAt | date('d/m/Y H:i') }}</span>
					</li>
				</ul>
				<img class="img-custom" src="{{ asset('uploads/') ~ article.photo }}" alt="{{ article.title }}">
				<div class="card-body">
					<p class="card-text my-4 col-10 mx-auto">{{article.content | raw }}</p>
					{#raw interpretation de html donc desactivation de sécurité#}
				</div>
			</div>

		</div>
	</div>

	{% if app.user %}

	{{ render(controller('App\\Controller\\CommentaryController::addCommentary', {'id': article.id} )) }}
	{# {{ render(url('add_commentary', {'id' : article.id}) ) }} #}
	{% else %}

        <div class="row">
            <div class="col-8 mx-auto text-center">
                <p class="h4"> Vous devez être connecté pour commenter cet article </p>
                <a class="d-block col-3 btn btn-info mx-auto" href="{{ path('app_login') }}">Connexion</a>
            </div>
        </div>
    {% endif %}

	<hr>

	<h3>Espace commentaires</h3>

	{% if commentaries is not null %}
		<div class="row">
			<div class="col-5">
			
				{% for commentary in commentaries %}
					{% if commentary.deletedAt is null %}
						<div class="bg light shadow my-2">
							<p class="ps-3 text-muted">Créé le : {{ commentary.createdAt | date('d/m/Y') }} | Écrit par : {{ commentary.author ? commentary.author.prenom | capitalize ~ ' ' ~ commentary.author.nom | upper : "Pas d'auteur" }}
							{% if commentary.author is same as app.user %}

							<span style="float: right" class="pe-2" onclick="return confirm('Voulez vous archiver ce commentaire ? \n Vous retrouverez ces commentaires dans la partie mes commentaires de votre profil')">
								<a href="" class="text-danger"><i class="fa fa-times-circle"></i></a>
							</span>
							{% endif %}
							</p>

							<p class="ps-3">{{ commentary.comment | raw}}</p>																																
						</div>
					{% endif %}
				{% endfor %}

			</div>
		</div>

	{% endif %}

{% endblock %}
